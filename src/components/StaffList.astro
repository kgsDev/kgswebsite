---
// src/components/StaffList.astro
// This component displays a list of staff members with their photos, names, titles, and contact information.
const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

const { staff } = Astro.props;
---

<div class="staff-list grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {staff.map((member) => (
    <a 
      href={`/staff/${member.slug}`} 
      class="staff-card-container group" 
      data-name={`${member.first_name} ${member.last_name}`}
      data-title={member.working_title || ''}
      data-expertise={member.expertise || ''}
    >
      <div class="staff-card bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition duration-300 h-full flex flex-col">
        <div class="staff-photo-container relative overflow-hidden bg-gray-100" style="padding-top: 75%;">
          {typeof member.photo === 'string' && member.photo ? (
            <img 
              src={`${directusUrl}assets/${member.photo}`} 
              alt={`${member.first_name} ${member.last_name}`}
              class="absolute inset-0 w-full h-full object-cover transition duration-500"
              style="transform: scale(1); transition: transform 0.5s;"
              onmouseover="this.style.transform='scale(1.05)'"
              onmouseout="this.style.transform='scale(1)'"
              loading="lazy"
            />
          ) : (
            <div class="absolute inset-0 flex items-center justify-center bg-gray-200">
              <div class="w-24 h-24 rounded-full bg-blue-100 flex items-center justify-center">
                <span class="text-2xl font-semibold text-blue-800">
                  {member.first_name.charAt(0)}{member.last_name.charAt(0)}
                </span>
              </div>
            </div>
          )}
          
          <!-- Department indicator -->
          <div class={`absolute top-0 left-0 right-0 h-1 border-t-4 department-${member.department_id?.slug || 'other'}`}></div>
        </div>
        
        <div class="p-4 flex-grow">
          <h3 class="text-xl font-semibold text-blue-800 transition duration-300">
            {member.first_name} {member.last_name}
          </h3>
          <p class="text-gray-600 font-medium line-clamp-2">{member.working_title}</p>
          
          {member.expertise && (
            <div class="mt-3">
              <p class="text-sm text-gray-500 line-clamp-2">
                <span class="font-medium">Expertise:</span> {member.expertise}
              </p>
            </div>
          )}
        </div>
        
        <div class="px-4 pb-4 mt-auto">
          <div class="border-t pt-3 space-y-1 text-sm">
            {member.email && (
              <p class="flex items-center text-gray-600">
                <span class="text-blue-500 mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </span>
                <span class="truncate">{member.email}</span>
              </p>
            )}
            
            {member.phone && (
              <p class="flex items-center text-gray-600">
                <span class="text-blue-500 mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                  </svg>
                </span>
                <span class="truncate">{member.phone}</span>
              </p>
            )}
          </div>
          
          <div class="mt-3 text-right">
            <span class="inline-block text-blue-600 font-medium text-sm">View Profile â†’</span>
          </div>
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  /* Add some extra styles to handle aspects that Tailwind would normally cover */
  .staff-card-container:hover .text-blue-800 {
    color: #2563eb; /* blue-600 color */
  }
  
  .staff-card-container:hover .text-blue-600 + span {
    text-decoration: underline;
  }
</style>