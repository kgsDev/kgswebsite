---
// src/components/labs/SideNav.astro
// This component handles the side navigation for lab pages

const { lab, activePage = 'home' } = Astro.props;
const labSlug = lab?.slug || 'lab';
const labShortName = lab?.short_name || 'Lab';

// Navigation structure
const navItems = [
  { id: 'home', label: 'Overview', url: `/labs/${labSlug}` },
  { id: 'projects', label: 'Projects', url: `/labs/${labSlug}/projects` },
  { id: 'research', label: 'Research Areas & Tools', url: `/labs/${labSlug}/research` },
  { id: 'presentations', label: 'Presentations', url: `/labs/${labSlug}/presentations` },
  { id: 'publications', label: 'Publications', url: `/labs/${labSlug}/publications` },
  { id: 'contact', label: 'Contact', url: `/labs/${labSlug}#contact-info` },
];
---

<nav class="lab-sidenav">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <ul class="divide-y divide-gray-100">
      {navItems.map(item => (
        <li>
          <a 
            href={item.url}
            class={`lab-sidenav-item ${activePage === item.id ? 'active' : ''}`}
            aria-current={activePage === item.id ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  /* Basic styles that don't depend on CSS variables */
  .lab-sidenav {
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  .lab-sidenav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .lab-sidenav li {
    margin: 0;
    padding: 0;
  }
</style>