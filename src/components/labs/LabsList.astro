---
// src/components/labs/LabsList.astro
// A component for displaying a list of labs
import LabCard from './LabCard.astro';

const { labs, directusUrl, title = "Lab Affiliations", icon = true } = Astro.props;

// Don't render anything if there are no labs
if (!labs || labs.length === 0) return null;
---

<div class="bg-blue-50 p-3 rounded-lg">
  <h3 class="text-sm font-semibold text-blue-800 mb-2 flex items-center">
    {icon && (
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
      </svg>
    )}
    {title}
  </h3>

  <div class="flex flex-col gap-2">
    {labs.map((lab) => (
      <LabCard labs={lab} directusUrl={directusUrl} />
    ))}
  </div>
</div>