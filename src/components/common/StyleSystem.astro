---
// Component to define all UK branding styles
const ukColors = {
  wildcatBlue: "#0033A0",    // Primary blue - PMS 286 C
  sky: "#B1C9E8",            // PMS 658
  midnight: "#1B365D",       // Dark blue - PMS 534
  bluegrass: "#1E8AFF",      // Bright blue - PMS 2382
  goldenrod: "#FFDC00",      // PMS 122
  sunset: "#FFA360",         // PMS 1635
  riverGreen: "#4CBCC0"      // PMS 7465
};
---

<style define:vars={ukColors}>
  /* UK Brand Colors as CSS Variables */
  :root {
    --wildcat-blue: var(--wildcatBlue);
    --sky: var(--sky);
    --midnight: var(--midnight);
    --bluegrass: var(--bluegrass);
    --goldenrod: var(--goldenrod);
    --sunset: var(--sunset);
    --river-green: var(--riverGreen);
  }
  
  /* Custom Classes */
  .uk-gradient-header {
    background: linear-gradient(to right, var(--wildcatBlue), var(--midnight));
  }
  .uk-text-primary {
    color: var(--wildcatBlue);
  }
  .uk-text-sky {
    color: var(--sky);
  }
  .uk-text-bluegrass {
    color: var(--bluegrass);
  }
  .uk-bg-midnight {
    background-color: var(--midnight);
  }
  .uk-bg-wildcat-blue {
    background-color: var(--wildcatBlue);
  }
  .uk-bg-sky-20 {
    background-color: rgba(177, 201, 232, 0.2); /* Sky color with 20% opacity */
  }
  .uk-border-sky-30 {
    border-color: rgba(177, 201, 232, 0.3); /* Sky color with 30% opacity */
  }
  
  /* Hover effects */
  .uk-hover-sky:hover {
    color: var(--sky);
  }
  .uk-hover-bluegrass:hover {
    color: var(--bluegrass);
  }
  .uk-hover-wildcat-blue:hover {
    color: var(--wildcatBlue);
  }
  
  /* Active state */
  .uk-active-link {
    border-bottom: 2px solid white;
    padding-bottom: 0.25rem;
    font-weight: 500;
  }
</style>