<!-- External Link Warning Modal -->
<div class="link-warning-overlay" id="linkWarningOverlay">
  <div class="link-warning-modal">
    <div class="modal-header modal-alert-title">
      <svg class="modal-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      <span>You're leaving the new KGS site</span>
    </div>
    
    <div class="modal-body">
      <p class="modal-message">
        You're about to visit a page on our previous website. We're actively working to migrate all content to this new site, so some information and features may differ.
      </p>
      
      <div class="destination-info">
        <strong>You're going to:</strong>
        <div class="destination-url" id="destinationUrl"></div>
      </div>

      <div class="dont-show-again">
        <input type="checkbox" id="dontShowAgain">
        <label for="dontShowAgain">Don't show this warning again</label>
      </div>
    </div>
    
    <div class="modal-buttons">
      <button class="external-warning-btn external-warning-btn-secondary" onclick="closeExternalWarning()">Cancel</button>
      <a href="#" class="external-warning-btn external-warning-btn-primary" id="proceedLink">
        Continue to old site
        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
