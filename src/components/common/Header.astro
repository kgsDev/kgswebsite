---
// Header component with navigation

// Props for active page highlighting
export interface Props {
  activePage?: string;
}

const { activePage = '' } = Astro.props;
---

<header>
  <!-- White background section with flush left logo -->
  <div class="bg-white py-4 relative">
    <a href="/" class="block absolute left-0">
      <img src="/src/assets/index/uk-kgs-logo-final.webp" alt="Kentucky Geological Survey" class="h-16" />
    </a>
    
    <!-- Spacer div to maintain height with absolute positioning -->
    <div class="h-16"></div>
  </div>
  
  <!-- Blue gradient navigation bar -->
  <div class="uk-gradient-header text-white shadow-md">
    <div class="container mx-auto py-3 px-4">
      <nav>
        <ul class="flex flex-wrap justify-center space-x-6">
          <li>
            <a href="/" class={`text-white hover:text-[#B1C9E8] transition ${activePage === 'home' ? 'font-medium border-b-2 border-white pb-1' : ''}`}>Home</a>
          </li>
          <li>
            <a href="/staff" class={`text-white hover:text-[#B1C9E8] transition ${activePage === 'staff' ? 'font-medium border-b-2 border-white pb-1' : ''}`}>Employees</a>
          </li>
          <li>
            <a href="/services" class={`text-white hover:text-[#B1C9E8] transition ${activePage === 'services' ? 'font-medium border-b-2 border-white pb-1' : ''}`}>Services</a>
          </li>
          <li>
            <a href="/resources" class={`text-white hover:text-[#B1C9E8] transition ${activePage === 'resources' ? 'font-medium border-b-2 border-white pb-1' : ''}`}>Resources</a>
          </li>
          <li>
            <a href="/contact" class={`text-white hover:text-[#B1C9E8] transition ${activePage === 'contact' ? 'font-medium border-b-2 border-white pb-1' : ''}`}>Contact</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  /* Ensure the gradient is applied */
  .uk-gradient-header {
    background: linear-gradient(to right, #0033A0, #1B365D); /* Wildcat Blue to Midnight */
  }
</style>