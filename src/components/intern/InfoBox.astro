---
// src/components/InfoBox.astro
interface Props {
  title: string;
  description: string;
  buttons?: Array<{
    text: string;
    href: string;
    icon?: string; // Optional Font Awesome icon class like "fas fa-arrow-right"
  }>;
}

const { title, description, buttons = [] } = Astro.props;
---

<div style="background: linear-gradient(to right, var(--wildcatBlue), var(--midnightBlue));" class="text-white rounded-lg p-8 text-center">
  <div>
    <h2 style="color: white !important;">{title}</h2>
    <p style="color: white !important;" class="p-4">{description}</p>
    
    {buttons.length > 0 && (
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
        {buttons.map(button => (
          <a 
            href={button.href}
            class="inline-flex items-center px-6 py-3 bg-white text-blue-900 font-semibold rounded-lg hover:bg-gray-300 transition"
          >
            {button.text}
            {button.icon && (
              <i class={`${button.icon} ml-3 text-xl`}></i>
            )}
          </a>
        ))}
      </div>
    )}
  </div>
  
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <p class="text-lg" style="color: white !important;">Questions? Contact us:</p>
    <a 
      href="mailto:kgspotterinternship@uky.edu"
      class="baselink text-lg hover:underline" style="color: white !important;"
    >
      kgspotterinternship@uky.edu
    </a>
  </div>
</div>