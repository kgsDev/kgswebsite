---
// src/components/StaffDetail.astro
// This component displays detailed information about a staff member
const { member, relatedStaff = [] } = Astro.props;
const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

// Debug output to help diagnose what's in the member object
// console.log("Staff member detail:", JSON.stringify(member, null, 2));
---

<div class="max-w-5xl mx-auto">
  <!-- Staff Member Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
    <div class="md:flex">
      <!-- Photo Section -->
      <div class="md:w-1/3 relative">
        {typeof member.photo === 'string' && member.photo ? (
          <div class="relative h-full">
            <img 
              src={`${directusUrl}assets/${member.photo}`} 
              alt={`${member.first_name} ${member.last_name}`}
              class="w-full h-full object-cover"
              style="min-height: 300px;"
            />
            <!-- Department color indicator -->
            <div class={`absolute top-0 left-0 w-2 h-full border-l-4 department-${member.department_id?.slug || 'other'}`}></div>
          </div>
        ) : (
          <div class="bg-gray-200 flex items-center justify-center h-64 md:h-full" style="min-height: 300px;">
            <div class="w-32 h-32 rounded-full bg-blue-100 flex items-center justify-center">
              <span class="text-4xl font-semibold text-blue-800">
                {member.first_name.charAt(0)}{member.last_name.charAt(0)}
              </span>
            </div>
          </div>
        )}
      </div>
      
      <!-- Info Section -->
      <div class="md:w-2/3 p-6 md:p-8">
        <div class="mb-6">
          <h1 class="text-3xl font-bold text-blue-800 mb-2">
            {member.first_name} {member.last_name}
          </h1>
          <p class="text-xl text-gray-600 mb-1">{member.working_title}</p>
          <p class="text-gray-500 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            {member.department}
          </p>
        </div>
        
        <div class="space-y-6">
          {member.expertise && (
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-800 mb-2 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                Areas of Expertise
              </h3>
              <p class="text-gray-700">{member.expertise}</p>
            </div>
          )}
          
          <div>
            <h3 class="text-lg font-semibold text-blue-800 mb-3 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Contact Information
            </h3>
            <div class="grid md:grid-cols-2 gap-4">
              {member.email && (
                <div class="bg-gray-50 p-3 rounded flex items-center hover:bg-gray-100 transition">
                  <div class="mr-3 p-2 bg-blue-100 rounded-full text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">Email</p>
                    <a href={`mailto:${member.email}`} class="text-blue-600 hover:underline">
                      {member.email}
                    </a>
                  </div>
                </div>
              )}
              
              {member.phone && (
                <div class="bg-gray-50 p-3 rounded flex items-center hover:bg-gray-100 transition">
                  <div class="mr-3 p-2 bg-blue-100 rounded-full text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">Phone</p>
                    <a href={`tel:${member.phone.replace(/[^0-9]/g, '')}`} class="text-blue-600 hover:underline">
                      {member.phone}
                    </a>
                  </div>
                </div>
              )}
            
              {/* Professional Profiles */}
              {member.linkedin_url && (
                <div class="bg-gray-50 p-3 rounded flex items-center hover:bg-gray-100 transition">
                  <div class="mr-3 p-2 bg-blue-100 rounded-full text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">LinkedIn</p>
                    <a href={member.linkedin_url} target="_blank" rel="noopener" class="text-blue-600 hover:underline">
                      View Profile
                    </a>
                  </div>
                </div>
              )}
              
              {member.researchgate_url && (
                <div class="bg-gray-50 p-3 rounded flex items-center hover:bg-gray-100 transition">
                  <div class="mr-3 p-2 bg-blue-100 rounded-full text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19.586 0c-2.183 0-4.226.6-5.274 1.894C13.396.8 11.502 0 9.416 0 4.641 0 0 3.705 0 9.585c0 3.92 2.645 5.412 4.252 5.412.5 0 .84-.283.84-.749 0-.425-.365-.713-.733-.868-.59-.282-1.422-.955-1.422-2.602 0-3.932 3.247-6.311 6.383-6.311 1.5 0 2.638.624 3.13 1.5.63 1.126.27 2.55-.723 3.771-1.07 1.127-2.668 2.17-4.155 3.326a63.368 63.368 0 0 0-1.53 1.227c-.68.57-.87 1.222-.87 1.874 0 1.01.795 1.966 2.26 1.966 1.82 0 3.547-1.056 4.691-2.882l.364-.598c.155-.267.35-.6.486-.838.315-.553.68-1.189.68-1.783 0-.275-.145-.552-.436-.695-.285-.142-.556-.24-.825-.339-.27-.1-.6-.317-.6-.54 0-.158.079-.317.254-.414.425-.254 1.042-.65 1.661-1.097l.05-.038c2.535-1.857 4.85-3.748 4.85-7.008C18.12 2.044 16.306 0 12.915 0h6.671zm-14.26 2.547c-1.023 0-2.8.816-2.8 3.7 0 1.882.827 3.624 1.88.827 1.054-2.797 2.424-4.002 4.008-3.64.775.178 1.352.765 1.686 1.866.156.511.294 1.055.404 1.553.11.498.273 1.022.306 1.444.033.399-.103.728-.503.728-1.008 0-3.076-1.894-3.076-3.466 0-.3.09-.781.09-1.061 0-.324-.143-.82-.473-.82h-.001z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">ResearchGate</p>
                    <a href={member.researchgate_url} target="_blank" rel="noopener" class="text-blue-600 hover:underline">
                      View Profile
                    </a>
                  </div>
                </div>
              )}
              
              {member.googlescholar_url && (
                <div class="bg-gray-50 p-3 rounded flex items-center hover:bg-gray-100 transition">
                  <div class="mr-3 p-2 bg-blue-100 rounded-full text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">Google Scholar</p>
                    <a href={member.googlescholar_url} target="_blank" rel="noopener" class="text-blue-600 hover:underline">
                      View Profile
                    </a>
                  </div>
                </div>
              )}
            </div>
          </div>
          
          {typeof member.biography_file === 'string' && member.biography_file && (
            <div class="mt-6">
              <a 
                href={`${directusUrl}assets/${member.biography_file}`}
                target="_blank"
                class="inline-flex items-center px-4 py-2 border border-blue-600 text-blue-600 bg-white rounded-md hover:bg-blue-600 hover:text-white transition"
              >
                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                View Full Biography
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Related Staff Section -->
  {relatedStaff && relatedStaff.length > 0 && (
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6 text-blue-800">
        Other Staff in {member.department}
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        {relatedStaff.map((related) => (
          <a href={`/staff/${related.slug}`} class="group">
            <div class="bg-white shadow rounded-lg overflow-hidden flex flex-col h-full hover:shadow-md transition">
              <div class="relative overflow-hidden bg-gray-100" style="padding-top: 75%;">
                {typeof related.photo === 'string' && related.photo ? (
                  <img 
                    src={`${directusUrl}assets/${related.photo}`} 
                    alt={`${related.first_name} ${related.last_name}`}
                    class="absolute inset-0 w-full h-full object-cover transition duration-300"
                    style="transform: scale(1); transition: transform 0.5s;"
                    onmouseover="this.style.transform='scale(1.05)'"
                    onmouseout="this.style.transform='scale(1)'"
                    loading="lazy"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center bg-gray-200">
                    <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center">
                      <span class="text-xl font-semibold text-blue-800">
                        {related.first_name.charAt(0)}{related.last_name.charAt(0)}
                      </span>
                    </div>
                  </div>
                )}
              </div>
              
              <div class="p-3">
                <h3 class="font-medium text-blue-800 transition">
                  {related.first_name} {related.last_name}
                </h3>
                <p class="text-sm text-gray-600 truncate">{related.working_title}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  )}
  
  <!-- Back to Directory Button -->
  <div class="mt-8 text-center">
    <a 
      href="/staff" 
      class="inline-flex items-center px-5 py-2.5 bg-blue-700 text-white rounded-md hover:bg-blue-800 transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Staff Directory
    </a>
  </div>
</div>

<style>
  /* Add hover effects */
  .group:hover .text-blue-800 {
    color: #2563eb; /* blue-600 color */
  }
</style>