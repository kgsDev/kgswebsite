---
// src/components/digital/SimpleHeader.astro
// Compact header for digital display with Staff Directory title (QR code moved to bottom right)
---

<header class="digital-header">
  <div class="header-container">
    <div class="flex items-center justify-between">
      <a href="/" class="logo-link">
        <img 
          src="/assets/index/uk-kgs-logo-final.webp" 
          alt="University of Kentucky - Kentucky Geological Survey"
          class="combined-logo"
        />
      </a>
      
      <div class="text-center flex-grow">
        <h1 class="text-2xl font-bold text-blue-800">KGS Staff and Affiliates Directory</h1>
      </div>
      
      <!-- Spacer to balance the layout where QR code used to be -->
      <div style="width: 100px;"></div>
    </div>
  </div>
</header>

<style>
  .digital-header {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .header-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 0;
  }
  
  .logo-link {
    display: inline-block;
    transition: opacity 0.2s ease;
  }
  
  .logo-link:hover {
    opacity: 0.9;
  }
  
  .combined-logo {
    height: 80px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
  }
  
  /* For very large vertical displays */
  @media (min-height: 3000px) {
    .digital-header {
      padding: 1rem 0;
    }
    
    .combined-logo {
      height: 84px;
    }
    
    h1 {
      font-size: 3rem;
      margin:0 0 0 0;
      padding:0 0 0 0;
    }
  }
</style>