---
// src/components/digital/SimpleHeader.astro
// Simple header for digital display - just logo, no navigation
---

<header class="digital-header">
  <div class="header-container">
    <div class="logo-section">
      <!-- Combined logo linking to home -->
      <a href="/" class="logo-link">
        <img 
          src="/assets/index/uk-kgs-logo-final.webp" 
          alt="University of Kentucky - Kentucky Geological Survey" 
          class="combined-logo"
        />
      </a>
    </div>
  </div>
</header>

<style>
  .digital-header {
    padding: 1.5rem 0;
  }
    
  .logo-link {
    display: inline-block;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }
  
  .logo-link:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }
  
  .combined-logo {
    height: 80px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .digital-header {
      padding: 1rem 0;
    }
    
    .header-container {
      padding: 0 1rem;
    }
    
    .combined-logo {
      height: 60px;
    }
  }
  
  /* For large displays like 55" monitors */
  @media (min-height: 3000px) {
    .digital-header {
      padding: 2.5rem 0;
    }
    
    .combined-logo {
      height: 120px;
    }
  }
</style>