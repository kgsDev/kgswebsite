---
// src/components/StaffList.astro
// This component displays a list of staff members with their photos, names, titles, and contact information.
const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

const { staff } = Astro.props;

// Helper function to get leadership badge info
function getLeadershipBadge(member) {
  if (member.director_kgs) return { label: 'State Geologist', class: 'bg-red-100 text-red-800 border-red-200' };
  if (member.associate_dir) return { label: 'Associate Director', class: 'bg-purple-100 text-purple-800 border-purple-200' };
  if (member.assistant_dir) return { label: 'Assistant Director', class: 'bg-indigo-100 text-indigo-800 border-indigo-200' };
  if (member.div_director) return { label: 'Division Director', class: 'bg-blue-100 text-blue-800 border-blue-200' };
  return null;
}
---

<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-20">
  {staff.map((member) => (
    <a 
      href={`/staff/${member.slug}`} 
      class="staff-card-container group" 
      data-name={`${member.first_name} ${member.last_name}`}
      data-title={member.working_title || ''}
      data-expertise={member.expertise || ''}
      data-teams={member.teamNames || ''}
    >
      <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition duration-300 h-full flex flex-col">
        {/* Image Container - Taller portrait ratio to better show faces */}
        <div class="relative overflow-hidden bg-gray-100" style="padding-top: 125%;">
          {typeof member.photo === 'string' && member.photo ? (
            <img 
              src={`${directusUrl}assets/${member.photo}?width=480&height=600&quality=90`} 
              alt={`${member.first_name} ${member.last_name}`}
              class="absolute inset-0 w-full h-full object-contain bg-gray-100 transition duration-500"
              style="transform: scale(1); transition: transform 0.5s;"
              onmouseover="this.style.transform='scale(1.05)'"
              onmouseout="this.style.transform='scale(1)'"
              loading="eager"
            />
          ) : (
            <div class="absolute inset-0 flex items-center justify-center bg-gray-200">
              <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                <span class="text-base font-semibold text-blue-800">
                  {member.first_name.charAt(0)}{member.last_name.charAt(0)}
                </span>
              </div>
            </div>
          )}
          
          {/* Department indicator - Moved to left side for consistency with profile */}
          <div class={`absolute top-0 left-0 h-full w-1 border-l-4 department-${member.department_id?.slug || 'other'}`}></div>
        </div>
        
        <div class="p-3 flex-grow">
          {/* Team Lead Badge Only */}
          {member.is_team_lead && (
            <div class="mb-2 flex flex-wrap gap-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 border border-emerald-200">
                <svg xmlns="http://www.w3.org/2000/svg" style="width: 0.75rem; height: 0.75rem;" class="mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                </svg>
                Team Lead
              </span>
            </div>
          )}
          
          <h4>
            {member.first_name} {member.last_name}
          </h4>
          <p class="text-gray-600 font-medium line-clamp-2 text-sm">{member.working_title}</p>
          
          {member.expertise && (
            <div class="mt-1">
              <p class="text-xs text-gray-500 line-clamp-2">
                <span class="font-medium">Expertise:</span> {member.expertise}
              </p>
            </div>
          )}

          {member.team && member.team.length > 0 && (
            <div class="mt-1 flex flex-wrap gap-1">
              {member.team.map((team, index) => {
                // Try multiple potential property names for maximum compatibility
                const displayName = team.name || team.team_name || team.description || team.title || `Team ${index+1}`;
                return index < 2 ? (
                  <span class={`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-normal ${team.is_team_lead ? 'bg-emerald-100 text-emerald-800 border border-emerald-200' : 'bg-blue-100 text-blue-800'}`}>
                    {team.is_team_lead && (
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 0.75rem; height: 0.75rem;" class="mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                      </svg>
                    )}
                    {displayName}
                  </span>
                ) : null;
              })}
              {member.team.length > 2 && (
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-normal bg-gray-100 text-gray-600">
                  +{member.team.length - 2} more
                </span>
              )}
            </div>
          )}
        </div>
        
        <div class="px-3 pb-3 mt-auto">
          <div class="border-t pt-2 flex flex-col gap-1">
            {member.email && (
              <div class="flex items-center text-gray-600 text-xs">
                <span class="text-blue-500 mr-2 flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 0.875rem; height: 0.875rem;" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </span>
                <span class="truncate">{member.email}</span>
              </div>
            )}
            
            {member.phone && (
              <div class="flex items-center text-gray-600 text-xs">
                <span class="text-blue-500 mr-2 flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 0.875rem; height: 0.875rem;" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                  </svg>
                </span>
                <span class="truncate">{member.phone}</span>
              </div>
            )}
          </div>
          
          <div class="mt-2 text-right">
            <span class="inline-block text-blue-900 font-medium text-sm">View Profile â†’</span>
          </div>
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  /* Add some extra styles to handle aspects that Tailwind would normally cover */
  .staff-card-container:hover .text-blue-800 {
    color: #2563eb; /* blue-600 color */
  }
  
  .staff-card-container:hover .text-blue-600 {
    text-decoration: underline;
  }
  
  /* Department indicator colors - Add your colors here */
  .department-administration {
    border-color: #3b82f6; /* blue-500 */
  }
  
  .department-faculty {
    border-color: #10b981; /* emerald-500 */
  }
  
  .department-research {
    border-color: #8b5cf6; /* violet-500 */
  }
  
  .department-support {
    border-color: #f59e0b; /* amber-500 */
  }
  
  .department-other {
    border-color: #6b7280; /* gray-500 */
  }
</style>