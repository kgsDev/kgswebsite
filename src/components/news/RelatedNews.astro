---
// src/components/RelatedNews.astro
import { fetchNewsByStaffId, fetchNewsByLabId, fetchNewsByDepartmentId } from '../lib/api_news';

const { 
  entityType, 
  entityId, 
  count = 3, 
  showHeading = true 
} = Astro.props;

// Fetch related news based on entity type
let articles = [];
let title = "";

if (entityType === "staff") {
  articles = await fetchNewsByStaffId(entityId, count);
  title = "Related News";
} else if (entityType === "lab") {
  articles = await fetchNewsByLabId(entityId, count);
  title = "Lab News";
} else if (entityType === "department") {
  articles = await fetchNewsByDepartmentId(entityId, count);
  title = "Department News";
}

// Skip rendering if no articles
if (articles.length === 0) {
  return null;
}

const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

// Format date for display
const formatDate = (dateString) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<div class="related-news">
  {showHeading && (
    <h2 class="text-xl font-bold text-blue-900 mb-4">{title}</h2>
  )}
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {articles.map(article => (
      <a href={`/news/${article.slug}`} class="bg-white overflow-hidden rounded-lg shadow hover:shadow-md transition group h-full flex flex-col">
        <!-- Thumbnail -->
        <div class="relative w-full h-40">
          {article.main_image ? (
            <img 
              src={`${directusUrl}assets/${article.main_image}?width=400&height=200&quality=80&fit=cover`} 
              alt={article.title}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          ) : (
            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" style="width: 2.5rem; height: 2.5rem;" class="text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          )}
          
          <!-- Date badge -->
          <div class="absolute bottom-0 left-0 bg-blue-700 text-white text-xs px-2 py-1">
            {formatDate(article.published_date)}
          </div>
        </div>
        
        <!-- Content -->
        <div class="p-4 flex-1 flex flex-col">
          <h3 class="font-medium text-blue-800 group-hover:text-blue-600 mb-2 line-clamp-2">
            {article.title}
          </h3>
          
          {article.excerpt && (
            <p class="text-sm text-gray-600 line-clamp-3 mb-3">
              {article.excerpt}
            </p>
          )}
          
          <div class="mt-auto pt-2 text-sm text-blue-600 flex items-center">
            Read more
            <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </div>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  /* Truncate text using line clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>