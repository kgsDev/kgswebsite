---
import directus from "../../../lib/directus";
import { readItems } from "@directus/sdk";

interface Props {
  teamId: number;
  title?: string;
  showInSidebar?: boolean;
}

const { 
  teamId, 
  title = "Recent Publications",
  showInSidebar = false,
  limit = showInSidebar ? 3 : -1
} = Astro.props;

const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

// Image transformation parameters for Directus
// width=300: Request 300px width (2-3x display size for retina)
// quality=85: High quality (default is often 80)
// format=auto: Let Directus choose best format (WebP if supported)

// Fetch publications for this research team
let publications = [];

try {
  // Query publications through the publications_team junction table
  const pubs = await directus.request(readItems("publications", {
    fields: [
      'id',
      'title',
      'authors',
      'year',
      'journal',
      'url',
      'thumbnail'
    ],
    filter: {
      'research_team': {
        'team_id': {
          '_eq': teamId
        }
      }
    },
    sort: ['-year', 'title']
  }));
  
  publications = pubs || [];
 
  // Apply limit if specified
  if (limit > 0 && publications.length > limit) {
    publications = publications.slice(0, limit);
  }

} catch (error) {
  console.error("Error fetching publications:", error);
}
---

{publications.length > 0 && (
  <div class={showInSidebar ? "sidebar-publications" : "main-publications"}>
    <style>
      .main-publications {
        margin: 2rem 0;
        background: #f8f9fa;
      }

      .main-publications h3 {
        color: #0033A0;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
      }

      .main-publications h3 i {
        margin-right: 0.75rem;
      }

      .sidebar-publications {
        /* Styles already defined in parent page */
      }

      .pub-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .pub-item {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        padding: 1.25rem;
        display: flex;
        gap: 1rem;
        transition: box-shadow 0.2s;
      }

      .pub-item:hover {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .pub-thumbnail {
        flex-shrink: 0;
        width: 100px;
        height: 130px; /* Maintain 815:1057 aspect ratio */
        border-radius: 0.375rem;
        overflow: hidden;
        background: #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .pub-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top; /* Show top of cover */
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
      }

      .pub-thumbnail i {
        font-size: 2rem;
        color: #9ca3af;
      }

      .pub-content {
        flex: 1;
        min-width: 0;
      }

      .pub-title h3 {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.25rem;
        line-height: 1;
      }

      .pub-title a {
        color: #0033A0;
        text-decoration: none;
      }

      .pub-title a:hover {
        text-decoration: underline;
      }

      .pub-authors {
        font-size: 0.875rem;
        color: #6b7280;
        margin-bottom: 0.25rem;
        line-height: 1.5;
      }

      .pub-meta {
        font-size: 0.875rem;
        color: #6b7280;
      }

      .pub-year {
        font-weight: 600;
        color: #4b5563;
      }

      /* Sidebar-specific styles */
      .sidebar-publications .pub-item {
        flex-direction: column;
        padding: 1rem;
      }

      .sidebar-publications .pub-thumbnail {
        width: 100%;
        height: 120px;
      }

      .sidebar-publications .pub-title {
        font-size: 0.9375rem;
      }

      .sidebar-publications .pub-authors {
        font-size: 0.8125rem;
      }

      .sidebar-publications .pub-meta {
        font-size: 0.8125rem;
      }

      /* Compact sidebar version */
      .pub-list-compact {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .pub-list-compact .pub-item {
        padding: 1rem;
        gap: 0.75rem;
        flex-direction: row; /* Keep horizontal in compact mode */
      }

      .pub-list-compact .pub-thumbnail {
        width: 60px;
        height: 78px; /* Maintain 815:1057 ratio */
      }

      .pub-list-compact .pub-title {
        font-size: 0.9375rem;
        margin-bottom: 0.25rem;
      }

      .pub-list-compact .pub-authors {
        font-size: 0.8125rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>

    {!showInSidebar && (
      <h3>
        <i class="fas fa-books"></i>
        {title}
      </h3>
    )}

    <div class={showInSidebar ? "pub-list-compact" : "pub-list"} data-gallery="true">
      {publications.map((pub) => (
        <article class="pub-item">
          <div class="pub-thumbnail">
            {pub.thumbnail ? (
              <img 
                src={`${directusUrl}/assets/${pub.thumbnail}?width=300&quality=80`}
                alt={`Cover for ${pub.title}`}
                loading="lazy"
              />
            ) : (
              <i class="fas fa-file-alt"></i>
            )}
          </div>
          <div class="pub-content">
            <h3 class="pub-title" style="font-size:1.15rem;">
              {pub.url ? (
                <a href={pub.url} target="_blank" rel="noopener noreferrer">
                  {pub.title}
                </a>
              ) : (
                pub.title
              )}
            </h3>
            {pub.authors && (
              <p class="pub-authors">{pub.authors}</p>
            )}
            <p class="pub-meta">
              <span class="pub-year">{pub.year}</span>
              {pub.journal && ` â€¢ ${pub.journal}`}
            </p>
          </div>
        </article>
      ))}
    </div>

    {!showInSidebar && publications.length > 5 && (
      <div style="margin-top: 1.5rem; text-align: center;">
        <a 
          href="https://kgs.uky.edu/kygeode/services/pubs/?critType=keyword&critText=landslides" 
          style="display: inline-flex; align-items: center; gap: 0.5rem; color: #0033A0; text-decoration: none; font-weight: 600; padding: 0.75rem 1.5rem; border: 2px solid #0033A0; border-radius: 0.375rem; transition: all 0.2s;"
          onmouseover="this.style.background='#0033A0'; this.style.color='white';"
          onmouseout="this.style.background='transparent'; this.style.color='#0033A0';"
        >
          View all publications
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    )}
  </div>
)}