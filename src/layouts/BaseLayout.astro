---
// Base layout with common structure and styling
import '../styles/global.css';

import SEOHead from '../components/SEOHead.astro';
import StyleSystem from '../components/common/StyleSystem.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import BackToTop from '../components/common/BackToTop.astro';

export interface Props {
  title: string;
  description?: string;
  activePage?: string;
  showBreadcrumb?: boolean;
  bodyBackgroundColor?: string;
  customBreadcrumbs?: Array<{label: string, href?: string}>;
  image?: string;
  imageAlt?: string;
  type?: string;
  publishedDate?: string;
  modifiedDate?: string;
  authors?: string[];
  keywords?: string[];
  canonicalUrl?: string;
}

// DEFAULT SEO VALUES
const DEFAULT_SITE_NAME = 'Kentucky Geological Survey';
const DEFAULT_DESCRIPTION = 'The Kentucky Geological Survey conducts research and provides services related to the mineral, energy, and water resources of Kentucky, and investigates geologic hazards affecting the Commonwealth.';

//Use your Directus asset with optimal sizing for social media
const DIRECTUS_URL = import.meta.env.PUBLIC_DIRECTUS_URL || 'https://kygs.uky.edu/directus';
const DEFAULT_IMAGE = `${DIRECTUS_URL}/assets/cdb9b4f8-0575-4bae-a2e9-203c63a0a4d7?quality=90`;

const DEFAULT_IMAGE_ALT = 'Kentucky Geological Survey at the University of Kentucky';
const DEFAULT_KEYWORDS = [
  'Kentucky Geological Survey',
  'KGS',
  'University of Kentucky',
  'geology',
  'geological research',
  'mineral resources',
  'energy resources',
  'water resources',
  'Kentucky geology'
];

const { 
  title = DEFAULT_SITE_NAME,
  description = DEFAULT_DESCRIPTION,
  activePage = '',
  showBreadcrumb = true,
  bodyBackgroundColor = '#f9fafb',
  customBreadcrumbs,
  image = DEFAULT_IMAGE,
  imageAlt = DEFAULT_IMAGE_ALT,
  type = "website",
  publishedDate,
  modifiedDate,
  authors,
  keywords = DEFAULT_KEYWORDS,
  canonicalUrl = Astro.url.href // ✅ Auto-generate from current URL
} = Astro.props;

// ✅ Create a full title with site name (unless it's the homepage)
const fullTitle = title === DEFAULT_SITE_NAME ? title : `${title} - ${DEFAULT_SITE_NAME}`;

// ✅ For the staging banner
const isStaging = import.meta.env.PUBLIC_ENV === 'staging';

// Generate breadcrumbs automatically from URL
function generateBreadcrumbs(url: URL, pageTitle: string) {
  const pathSegments = url.pathname.split('/').filter(segment => segment !== '');
  const breadcrumbs = [];
  
  // Mapping of URL segments to display names
  const segmentMap: Record<string, string> = {
    'staff': 'Staff Directory',
    'about': 'About',
    'locations': 'Locations & Facilities',
    'services': 'Services',
    'resources': 'Resources',
    'contact': 'Contact',
    'news': 'News & Announcements',
    'publications': 'Publications',
    'maps': 'Maps & Data',
    'research': 'Research',
    'labs': 'Research Labs',
    'departments': 'Departments',
    'teams': 'Teams'
  };
  
  let currentPath = '';
  
  pathSegments.forEach((segment, index) => {
    currentPath += `/${segment}`;
    
    // For the last segment, use the page title if it's not a slug
    let label;
    if (index === pathSegments.length - 1) {
      // If it's a known segment, use the mapped name
      if (segmentMap[segment]) {
        label = segmentMap[segment];
      } else {
        // For dynamic routes (like staff/john-doe), use the page title
        label = pageTitle !== DEFAULT_SITE_NAME ? pageTitle : formatSegment(segment);
      }
    } else {
      // For intermediate segments, use mapped name or format the segment
      label = segmentMap[segment] || formatSegment(segment);
    }
    
    breadcrumbs.push({
      label,
      href: currentPath,
      isLast: index === pathSegments.length - 1
    });
  });
  
  return breadcrumbs;
}

// Helper function to format URL segments into readable text
function formatSegment(segment: string): string {
  return segment
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Get the current URL and generate breadcrumbs
const currentUrl = Astro.url;
const breadcrumbs = customBreadcrumbs || generateBreadcrumbs(currentUrl, title);
---

<html lang="en">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7XRH6W5VTY"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-7XRH6W5VTY');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{fullTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!-- Import Inter and Source Sans Pro fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Source+Sans+Pro:wght@300;400;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/bb3bef310a.js" crossorigin="anonymous"></script>

    <!-- Apply custom background color -->
    <style define:vars={{ bodyBackgroundColor }}>
      body {
        background-color: var(--bodyBackgroundColor);
      }
    </style>

    <StyleSystem />

    <!-- Include the SEO component with the provided props -->
    <SEOHead
      title={fullTitle}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
      authors={authors}
      keywords={keywords}
      canonicalUrl={canonicalUrl}
    />

    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50">
    <!-- Header -->
    <Header activePage={activePage} />

    <!-- Breadcrumb bar (optional) -->
    {showBreadcrumb && (
      <div class="uk-bg-sky-20 border-b uk-border-sky-30">
        <div class="container mx-auto py-4 px-4">
          <div class="flex items-center text-sm text-gray-600">
            <a href="/" class="hover:text-[#0033A0] transition">Home</a>
            
            {breadcrumbs.map((crumb, index) => (
              <Fragment>
                <span class="mx-2">›</span>
                {crumb.isLast ? (
                  <span class="text-gray-800">{crumb.label}</span>
                ) : (
                  <a href={crumb.href} class="hover:text-[#0033A0] transition">{crumb.label}</a>
                )}
              </Fragment>
            ))}
            
            <!-- Allow for custom breadcrumb additions via slot -->
            <slot name="breadcrumb" />
          </div>
        </div>
      </div>
    )}
    
    <!-- Main Content -->
    <main class="container mx-auto my-8 px-4 flex-grow" data-pagefind-body>
      <slot />
    </main>
    
    <!-- Footer -->
     <div data-pagefind-ignore>
      <Footer />
    </div>
    
    <!-- Back to Top Button -->
    <BackToTop />
  </body>
</html>