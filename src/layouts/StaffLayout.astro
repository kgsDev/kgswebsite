---
// Staff-specific layout that extends the BaseLayout
import BaseLayout from './BaseLayout.astro';

// Define props with defaults specific to staff pages
const { 
  title = 'Employee Directory',
  description = 'Kentucky Geological Survey staff directory with contact information and areas of expertise.',
  showBreadcrumb = true
} = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
  activePage="staff"
  showBreadcrumb={showBreadcrumb}
>
  <!-- Pass breadcrumb content if needed -->
  <Fragment slot="breadcrumb">
    <span class="mx-2">â€º</span>
    <a href="/staff" class="hover:text-[#0033A0] transition">Employee Directory</a>
    <slot name="breadcrumb" />
  </Fragment>
  
  <!-- Pass head content if needed -->
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>
  
  <!-- Main staff content -->
  <slot />
</BaseLayout>