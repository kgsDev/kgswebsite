---
// src/pages/labs/[slug]/funding.astro
export const prerender = false; // Enable SSR for this page

import LabLayout from '../../../layouts/LabLayout.astro';
import { 
  fetchLabBySlug, 
  fetchLabFunding 
} from '../../../lib/api_labs';

// Get the lab for this page
const { slug } = Astro.params;
const lab = await fetchLabBySlug(slug);

// Handle 404 if lab not found
if (!lab) {
  return Astro.redirect('/404');
}

// Get current and past funding
const today = new Date();
const activeFunding = await fetchLabFunding(lab.id, { active: true });
const pastFunding = await fetchLabFunding(lab.id, { active: false });

// Format currency
const formatCurrency = (amount, locale = 'en-US', currency = 'USD') => {
  if (amount === null || amount === undefined) return 'Unspecified Amount';
  
  return new Intl.NumberFormat(locale, {
    style: 'currency',
    currency: currency,
    minimumFractionDigits: 0,
    maximumFractionDigits: 0
  }).format(amount);
};

// Format date range
const formatDateRange = (startDate, endDate) => {
  const formatDate = (dateString) => {
    if (!dateString) return '';
    
    const date = new Date(dateString);
    return new Intl.DateTimeFormat('en-US', {
      year: 'numeric',
      month: 'short'
    }).format(date);
  };
  
  const start = formatDate(startDate);
  const end = endDate ? formatDate(endDate) : 'Present';
  
  if (!start && !endDate) return 'Dates unspecified';
  if (!start) return `Until ${end}`;
  
  return `${start} - ${end}`;
};

// Calculate grant duration in months
const calculateDuration = (startDate, endDate) => {
  if (!startDate) return null;
  
  const start = new Date(startDate);
  const end = endDate ? new Date(endDate) : new Date();
  
  // Calculate the difference in months
  const months = (end.getFullYear() - start.getFullYear()) * 12 + 
                 (end.getMonth() - start.getMonth());
  
  return months;
};
---

<LabLayout lab={lab} activePage="funding" pageTitle="Funding">
  <div class="space-y-10">
    <!-- Active Funding Section -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h1 class="text-2xl font-bold mb-6 lab-accent-text">Current Funding</h1>
      
      {activeFunding.length === 0 ? (
        <div class="text-center py-8 bg-gray-50 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No active funding</h3>
          <p class="mt-1 text-sm text-gray-500">No current grants or funding information available.</p>
        </div>
      ) : (
        <div class="grid gap-6">
          {activeFunding.map(grant => (
            <div class="border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow">
              <div class="flex justify-between flex-wrap gap-4 mb-4">
                <h3 class="text-lg font-bold">{grant.title}</h3>
                
                {grant.amount && (
                  <div class="px-3 py-1 lab-accent-bg text-white rounded-full font-medium">
                    {formatCurrency(grant.amount)}
                  </div>
                )}
              </div>
              
              <div class="flex flex-wrap gap-x-6 gap-y-2 mb-4 text-sm">
                {/* Funding Agency */}
                {grant.funding_agency && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 lab-accent-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <span>
                      {grant.funding_agency.name || grant.funding_agency}
                    </span>
                  </div>
                )}
                
                {/* Grant Number */}
                {grant.grant_number && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 lab-accent-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                    </svg>
                    <span>{grant.grant_number}</span>
                  </div>
                )}
                
                {/* Duration */}
                {(grant.start_date || grant.end_date) && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 lab-accent-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>{formatDateRange(grant.start_date, grant.end_date)}</span>
                    
                    {grant.start_date && (
                      <span class="ml-1 text-gray-500">
                        ({calculateDuration(grant.start_date, grant.end_date)} months)
                      </span>
                    )}
                  </div>
                )}
                
                {/* Role */}
                {grant.role && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 lab-accent-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                    </svg>
                    <span>{grant.role}</span>
                  </div>
                )}
              </div>
              
              {/* Description */}
              {grant.description && (
                <div class="text-gray-700 text-sm mt-3">
                  <p>{grant.description}</p>
                </div>
              )}
              
              {/* Links */}
              {grant.url && (
                <div class="mt-4">
                  <a 
                    href={grant.url} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="inline-flex items-center text-xs px-2 py-1 rounded-full lab-accent-bg text-white hover:opacity-90 transition"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    More Information
                  </a>
                </div>
              )}
            </div>
          ))}
        </div>
      )}
    </div>
    
    <!-- Past Funding Section -->
    {pastFunding.length > 0 && (
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold mb-6 lab-accent-text">Past Funding</h2>
        
        <div class="grid gap-6">
          {pastFunding.map(grant => (
            <div class="border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow">
              <div class="flex justify-between flex-wrap gap-4 mb-4">
                <h3 class="text-lg font-bold">{grant.title}</h3>
                
                {grant.amount && (
                  <div class="px-3 py-1 bg-gray-200 text-gray-800 rounded-full font-medium">
                    {formatCurrency(grant.amount)}
                  </div>
                )}
              </div>
              
              <div class="flex flex-wrap gap-x-6 gap-y-2 mb-4 text-sm">
                {/* Funding Agency */}
                {grant.funding_agency && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <span>
                      {grant.funding_agency.name || grant.funding_agency}
                    </span>
                  </div>
                )}
                
                {/* Grant Number */}
                {grant.grant_number && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                    </svg>
                    <span>{grant.grant_number}</span>
                  </div>
                )}
                
                {/* Duration */}
                {(grant.start_date || grant.end_date) && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>{formatDateRange(grant.start_date, grant.end_date)}</span>
                    
                    {grant.start_date && grant.end_date && (
                      <span class="ml-1 text-gray-500">
                        ({calculateDuration(grant.start_date, grant.end_date)} months)
                      </span>
                    )}
                  </div>
                )}
                
                {/* Role */}
                {grant.role && (
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                    </svg>
                    <span>{grant.role}</span>
                  </div>
                )}
              </div>
              
              {/* Description - Collapsed by default for past funding */}
              {grant.description && (
                <div class="mt-3">
                  <details class="text-sm">
                    <summary class="cursor-pointer text-gray-600 hover:text-gray-900">Show Description</summary>
                    <div class="mt-2 pl-2 border-l-2 border-gray-200 text-gray-700">
                      <p>{grant.description}</p>
                    </div>
                  </details>
                </div>
              )}
              
              {/* Links */}
              {grant.url && (
                <div class="mt-4">
                  <a 
                    href={grant.url} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="inline-flex items-center text-xs px-2 py-1 rounded-full bg-gray-200 text-gray-800 hover:bg-gray-300 transition"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    More Information
                  </a>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    )}
    
    <!-- Funding Stats Section -->
    {(activeFunding.length > 0 || pastFunding.length > 0) && (
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-6 lab-accent-text">Funding Overview</h2>
        
        <div class="grid md:grid-cols-3 gap-6">
          <!-- Total Active Funding -->
          <div class="p-4 border rounded-lg bg-green-50 border-green-200">
            <div class="text-sm text-green-800 font-medium mb-2">Active Funding</div>
            <div class="text-2xl font-bold text-green-800">
              {formatCurrency(
                activeFunding.reduce((sum, grant) => sum + (grant.amount || 0), 0)
              )}
            </div>
            <div class="text-sm text-green-700 mt-1">
              {activeFunding.length} active grant{activeFunding.length !== 1 ? 's' : ''}
            </div>
          </div>
          
          <!-- Total Historical Funding -->
          <div class="p-4 border rounded-lg bg-blue-50 border-blue-200">
            <div class="text-sm text-blue-800 font-medium mb-2">Historical Funding</div>
            <div class="text-2xl font-bold text-blue-800">
              {formatCurrency(
                pastFunding.reduce((sum, grant) => sum + (grant.amount || 0), 0)
              )}
            </div>
            <div class="text-sm text-blue-700 mt-1">
              {pastFunding.length} completed grant{pastFunding.length !== 1 ? 's' : ''}
            </div>
          </div>
          
          <!-- Total All-time Funding -->
          <div class="p-4 border rounded-lg bg-purple-50 border-purple-200">
            <div class="text-sm text-purple-800 font-medium mb-2">Total Funding</div>
            <div class="text-2xl font-bold text-purple-800">
              {formatCurrency(
                [...activeFunding, ...pastFunding].reduce((sum, grant) => sum + (grant.amount || 0), 0)
              )}
            </div>
            <div class="text-sm text-purple-700 mt-1">
              {activeFunding.length + pastFunding.length} total grant{activeFunding.length + pastFunding.length !== 1 ? 's' : ''}
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</LabLayout>