---
// src/pages/about/locations.astro
export const prerender = false; // Enable SSR for this page
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchKGSLocations } from '../../lib/api_locations';

// Fetch all KGS directory locations
const locations = await fetchKGSLocations();

// Get Google Maps API key from environment variables
const GOOGLE_MAPS_API_KEY = import.meta.env.GOOGLE_MAPS_API_KEY;
---

<BaseLayout
  title="KGS Locations and Facilities"
  description="Contact information and details for Kentucky Geological Survey locations and facilities throughout Kentucky."
  activePage="about"
>

  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2 text-blue-900">KGS Locations and Facilities</h1>
    <p class="text-gray-600">Contact information and details for Kentucky Geological Survey locations and facilities throughout Kentucky.</p>
  </div>

  <!-- Locations List -->
  <div class="space-y-8" >
    {locations.map((location) => (
            <span id={location.slug}></span>
            <br><br>
            <div 
              class="location-card bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
            >
              <!-- Location Header -->
              <div class="bg-blue-50 p-4 border-b">
                <h3 class="text-xl font-semibold text-blue-900 mb-1">
                  {location.name}
                </h3>
                {location.city && location.state && (
                  <p class="text-sm text-gray-600 flex items-center">
                    <i class="fas fa-regular fa-map-marker-alt mr-1"></i>
                    {location.city}, {location.state}
                  </p>
                )}
              </div>

              <!-- Main Content Area - Two Column Layout -->
              <div class="grid md:grid-cols-2 gap-0">
                <!-- Left Column - Contact Details -->
                <div class="p-6 space-y-4">
                  <!-- Address -->
                  {location.address && (
                    <div class="flex items-start">
                      <i class="fas fa-regular fa-house mr-3 mt-1 text-blue-500 flex-shrink-0"></i>
                      <div class="text-gray-700">
                        <div class="font-medium text-gray-900 mb-1">Address</div>
                        <div>{location.address}</div>
                        {location.zip && (
                          <div>{location.city}, {location.state} {location.zip}</div>
                        )}
                      </div>
                    </div>
                  )}

                  <!-- Phone Numbers -->
                  {location.regular_phone && (
                    <div class="flex items-start">
                      <i far class="fas fa-regular fa-phone mr-3 mt-1 text-blue-500 flex-shrink-0"></i>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Phone</div>
                        <a href={`tel:${location.regular_phone.replace(/[^0-9]/g, '')}`} class="baselink">
                          {location.regular_phone}
                        </a>
                        {location.toll_free_phone && (
                          <a href={`tel:${location.toll_free_phone.replace(/[^0-9]/g, '')}`} class="baselink block mt-1">
                            {location.toll_free_phone} <span class="text-gray-500 text-sm">(Toll Free)</span>
                          </a>
                        )}
                      </div>
                    </div>
                  )}

                  <!-- Email -->
                  {location.email && (
                    <div class="flex items-start">
                      <i class="fas fa-regular fa-envelope mr-3 mt-1 text-blue-500 flex-shrink-0"></i>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Email</div>
                        <a href={`mailto:${location.email}?subject=Inquiry%20About%20${location.name}`} class="baselink" aria-label={`Email ${location.name}`}>
                          {location.email}
                        </a>
                      </div>
                    </div>
                  )}

                  <!-- Hours -->
                  {location.regular_hours && (
                    <div class="flex items-start">
                      <i class="fas fa-regular fa-clock mr-3 mt-1 text-blue-500 flex-shrink-0"></i>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Hours</div>
                        <div class="text-gray-700 prose prose-sm max-w-none" set:html={location.regular_hours}></div>
                      </div>
                    </div>
                  )}

                  <!-- Website -->
                  {location.url && (
                    <div class="flex items-start">
                      <i class="fas fa-regular fa-arrow-up-right-from-square mr-3 mt-1 text-blue-500 flex-shrink-0"></i>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Website</div>
                        <a href={location.url} target="_blank" rel="noopener noreferrer" class="baselink" aria-label={`Visit website for ${location.name}`}>
                          Visit Website
                        </a>
                      </div>
                    </div>
                  )}
                </div>

                <!-- Right Column - Embedded Map -->
                {location.address && location.city && location.state && (
                  <div class="bg-gray-100 relative min-h-[300px] md:min-h-[400px]">
                    <iframe
                      src={GOOGLE_MAPS_API_KEY 
                        ? `https://www.google.com/maps/embed/v1/place?key=${GOOGLE_MAPS_API_KEY}&q=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`
                        : `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3000!2d-84.5!3d38.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2z${encodeURIComponent(location.address + ', ' + location.city + ', ' + location.state)}!5e0!3m2!1sen!2sus`
                      }
                      width="100%"
                      height="100%"
                      style="border:0; position: absolute; top: 0; left: 0;"
                      allowfullscreen
                      loading="lazy"
                      referrerpolicy="no-referrer-when-downgrade"
                      title={`Map showing location of ${location.name}`}
                    ></iframe>
                  </div>
                )}
              </div>

              <!-- Action Buttons -->
              <div class="bg-gray-50 px-6 py-4 border-t flex gap-3 justify-center">
                <!-- Map Link -->
                {location.address && location.city && location.state && (
                  <a 
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`}
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary btn-sm"
                    aria-label={`View larger map for ${location.name}`}
                  >
                    <i class="fas fa-regular fa-map text-gray-300 text-lg  mr-3 mt-0"></i> View Larger Map
                  </a>
                )}

                <!-- Directions Link -->
                {location.address && location.city && location.state && (
                  <a 
                    href={`https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`}
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary btn-sm"
                    aria-label={`Get directions to ${location.name}`}
                  >
                    <i class="fas fa-light fa-route text-gray-300 text-lg mr-3 mt-0"></i>
                    Get Directions
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
    </div>

  <!-- Back to Home Button -->
  <div class="mt-12 text-center">
    <a 
      href="/" 
      class="inline-flex items-center px-5 py-2.5 bg-[#0033A0] text-white rounded-md hover:bg-[#1B365D] transition"
    >
      <i class="fas fa-regular fa-home mr-2"></i>
      Back to Home
    </a>
  </div>
</BaseLayout>


<style>
  /* Cards are now full width and stacked */
  .location-card {
    display: flex;
    flex-direction: column;
  }
     
  /* Responsive iframe container */
  .map-container {
    position: relative;
    width: 100%;
    height: 300px;
  }
  
  @media (min-width: 768px) {
    .map-container {
      height: 400px;
    }
  }
</style>