---
// src/pages/about/locations.astro
export const prerender = false; // Enable SSR for this page
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchKGSLocations } from '../../lib/api_locations';

// Fetch all KGS directory locations
const locations = await fetchKGSLocations();

// Get Google Maps API key from environment variables
const GOOGLE_MAPS_API_KEY = import.meta.env.GOOGLE_MAPS_API_KEY;
---

<BaseLayout
  title="KGS Locations"
  description="Contact information and details for Kentucky Geological Survey locations and offices throughout Kentucky."
  activePage="about"
>

  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2 text-blue-900">KGS Locations</h1>
    <p class="text-gray-600">Contact information and details for Kentucky Geological Survey locations and offices throughout Kentucky.</p>
  </div>

  <!-- Locations List -->
  <div class="space-y-8">
    {locations.map((location) => (
            <div 
              class="location-card bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
            >
              <!-- Location Header -->
              <div class="bg-blue-50 p-4 border-b">
                <h3 class="text-xl font-semibold text-blue-900 mb-1">
                  {location.name}
                </h3>
                {location.city && location.state && (
                  <p class="text-sm text-gray-600 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {location.city}, {location.state}
                  </p>
                )}
              </div>

              <!-- Main Content Area - Two Column Layout -->
              <div class="grid md:grid-cols-2 gap-0">
                <!-- Left Column - Contact Details -->
                <div class="p-6 space-y-4">
                  <!-- Address -->
                  {location.address && (
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-3 mt-1 text-blue-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                      <div class="text-gray-700">
                        <div class="font-medium text-gray-900 mb-1">Address</div>
                        <div>{location.address}</div>
                        {location.zip && (
                          <div>{location.city}, {location.state} {location.zip}</div>
                        )}
                      </div>
                    </div>
                  )}

                  <!-- Phone Numbers -->
                  {location.regular_phone && (
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-3 mt-1 text-blue-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Phone</div>
                        <a href={`tel:${location.regular_phone.replace(/[^0-9]/g, '')}`} class="text-blue-600 hover:underline block">
                          {location.regular_phone}
                        </a>
                        {location.toll_free_phone && (
                          <a href={`tel:${location.toll_free_phone.replace(/[^0-9]/g, '')}`} class="text-blue-600 hover:underline block mt-1">
                            {location.toll_free_phone} <span class="text-gray-500 text-sm">(Toll Free)</span>
                          </a>
                        )}
                      </div>
                    </div>
                  )}

                  <!-- Email -->
                  {location.email && (
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-3 mt-1 text-blue-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Email</div>
                        <a href={`mailto:${location.email}`} class="text-blue-600 hover:underline">
                          {location.email}
                        </a>
                      </div>
                    </div>
                  )}

                  <!-- Hours -->
                  {location.regular_hours && (
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-3 mt-1 text-blue-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Hours</div>
                        <div class="text-gray-700 prose prose-sm max-w-none" set:html={location.regular_hours}></div>
                      </div>
                    </div>
                  )}

                  <!-- Website -->
                  {location.url && (
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-3 mt-1 text-blue-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                      <div>
                        <div class="font-medium text-gray-900 mb-1">Website</div>
                        <a href={location.url} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
                          Visit Website
                        </a>
                      </div>
                    </div>
                  )}
                </div>

                <!-- Right Column - Embedded Map -->
                {location.address && location.city && location.state && (
                  <div class="bg-gray-100 relative min-h-[300px] md:min-h-[400px]">
                    <iframe
                      src={GOOGLE_MAPS_API_KEY 
                        ? `https://www.google.com/maps/embed/v1/place?key=${GOOGLE_MAPS_API_KEY}&q=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`
                        : `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3000!2d-84.5!3d38.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2z${encodeURIComponent(location.address + ', ' + location.city + ', ' + location.state)}!5e0!3m2!1sen!2sus`
                      }
                      width="100%"
                      height="100%"
                      style="border:0; position: absolute; top: 0; left: 0;"
                      allowfullscreen
                      loading="lazy"
                      referrerpolicy="no-referrer-when-downgrade"
                      title={`Map showing location of ${location.name}`}
                    ></iframe>
                  </div>
                )}
              </div>

              <!-- Action Buttons -->
              <div class="bg-gray-50 px-6 py-4 border-t flex gap-3 justify-center">
                <!-- Map Link -->
                {location.address && location.city && location.state && (
                  <a 
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`}
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center px-4 py-2 bg-[#0033A0] text-white rounded-md hover:bg-[#1B365D] transition text-sm"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                    View Larger Map
                  </a>
                )}

                <!-- Directions Link -->
                {location.address && location.city && location.state && (
                  <a 
                    href={`https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(`${location.address}, ${location.city}, ${location.state}${location.zip ? ' ' + location.zip : ''}`)}`}
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center px-4 py-2 bg-[#1E8AFF] text-white rounded-md hover:bg-[#0033A0] transition text-sm"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    Get Directions
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
    </div>

  <!-- Back to Home Button -->
  <div class="mt-12 text-center">
    <a 
      href="/" 
      class="inline-flex items-center px-5 py-2.5 bg-[#0033A0] text-white rounded-md hover:bg-[#1B365D] transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.25rem; height: 1.25rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Home
    </a>
  </div>
</BaseLayout>


<style>
  /* Cards are now full width and stacked */
  .location-card {
    display: flex;
    flex-direction: column;
  }
  
  /* Rich text styles for hours field */
  .prose h1, .prose h2, .prose h3, .prose h4 {
    font-weight: 600;
    margin-top: 0.5rem;
    margin-bottom: 0.25rem;
  }
  
  .prose p {
    margin-bottom: 0.5rem;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 0.5rem;
    padding-left: 1.25rem;
  }
  
  .prose ul {
    list-style-type: disc;
  }
  
  .prose ol {
    list-style-type: decimal;
  }
  
  .prose strong {
    font-weight: 600;
  }
  
  .prose em {
    font-style: italic;
  }
  
  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }
  
  /* Responsive iframe container */
  .map-container {
    position: relative;
    width: 100%;
    height: 300px;
  }
  
  @media (min-width: 768px) {
    .map-container {
      height: 400px;
    }
  }
</style>