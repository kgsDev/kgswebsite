              <i class="fas fa-phone"></i>
              (859) XXX-XXXX
            </p>
          </div>
          
          <div class="contact-section">
            <p class="contact-name">General Inquiries</p>
            <p>
              <i class="fas fa-envelope"></i>
              <a href="mailto:kgs@uky.edu">kgs@uky.edu</a>
            </p>
          </div>
        </div>
      </div>

      <!-- Related Publications -->
      <div class="sidebar-section">
        <h3>
          <i class="fas fa-book"></i>
          Related Publications
        </h3>
        <div>
          <div class="publication-item">
            <a href="#">Publication Title Here (2024)</a>
            <p class="publication-meta">Author(s). Series/Report info.</p>
          </div>
          <div class="publication-item">
            <a href="#">Another Publication Title (2023)</a>
            <p class="publication-meta">Author(s). Series/Report info.</p>
          </div>
          <div class="publication-item">
            <a href="#">Research Report Title (2023)</a>
            <p class="publication-meta">Author(s). Series/Report info.</p>
          </div>
          <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
            <a href="/publications?topic=landslides" class="sidebar-link" style="font-weight: 600;">
              View all publications
              <i class="fas fa-arrow-right" style="margin-left: auto;"></i>
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="sidebar-section">
        <h3>
          <i class="fas fa-link"></i>
          Quick Links
        </h3>
        <div>
          <a href="#" class="sidebar-link">
            <i class="fas fa-map"></i>
