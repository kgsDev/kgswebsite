---
// src/pages/intern/projects.astro
export const prerender = false;
import BaseLayout from '../../layouts/BaseLayout.astro';
import InternSidebar from '../../components/InternSidebar.astro';
import { fetchInternProjectsByYear, fetchAllFinalProjectDetails } from '../../lib/api_intern';

const projectsByYear = await fetchInternProjectsByYear();
const finalProjectDetails = await fetchAllFinalProjectDetails();
const years = Object.keys(projectsByYear).sort((a, b) => parseInt(b) - parseInt(a));
const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL;

// Create a map of year to final project details for easy lookup
const finalProjectDetailsMap = {};
finalProjectDetails.forEach(detail => {
  finalProjectDetailsMap[detail.project_year] = detail;
});
---

<BaseLayout 
  title="Past Internship Projects"
  description="View projects and research completed by past Paul Edwin Potter Internship Program participants."
  activePage="intern"
>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar -->
    <InternSidebar activeSection="projects" />

    <!-- Main Content -->
    <div class="lg:col-span-3 max-w-6xl">
    <h1 class="text-3xl font-bold text-blue-900 mb-8">The Paul Edwin Potter Internship - Past Projects</h1>
    
    {years.length > 0 ? (
      <div class="space-y-16">
        {years.map((year) => {
          const projects = projectsByYear[year];
          const yearDetails = finalProjectDetailsMap[parseInt(year)];
          
          return (
            <div class="year-section">
              <h2 class="text-2xl font-bold text-blue-800 mb-8 pb-2 border-b-2 border-blue-200">
                {year} Projects
              </h2>
              
              {/* Year Details - Summary and/or Image */}
              {yearDetails && (yearDetails.overall_details || yearDetails.final_project_image) && (
                <div class="bg-blue-50 rounded-lg p-6 mb-8">
                  <div class="grid md:grid-cols-2 gap-6 items-center">
                    {/* Summary Text */}
                    {yearDetails.overall_details && (
                      <div>
                        <p class="text-gray-700 leading-relaxed">
                          {yearDetails.overall_details}
                        </p>
                      </div>
                    )}
                    
                    {/* Image */}
                    {yearDetails.final_project_image && (
                      <div class="text-center">
                        <figure>
                          <img 
                            src={`${directusUrl}assets/${yearDetails.final_project_image}?width=600&quality=90`}
                            alt={yearDetails.final_project_image_caption || `${year} internship program`}
                            class="w-full h-auto rounded-lg shadow-md mx-auto"
                          />
                          {yearDetails.final_project_image_caption && (
                            <figcaption class="text-sm text-gray-600 mt-2 italic">
                              {yearDetails.final_project_image_caption}
                            </figcaption>
                          )}
                        </figure>
                      </div>
                    )}
                  </div>
                </div>
              )}
              
                   
              {/* Projects for this year */}
              <div class="grid gap-8">
                {projects.map((project, index) => (
                  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                      <div class="flex items-start mb-4">
                        <div class="w-1 h-16 bg-blue-500 rounded-full mr-4 mt-1 flex-shrink-0"></div>
                        <div class="flex-grow">
                          <h3 class="text-xl font-bold text-blue-800 mb-2">
                            {project.title || `Project ${index + 1}`}
                          </h3>
                          
                          {project.research_question && (
                            <div class="mb-4">
                              <h4 class="font-semibold text-gray-700 mb-2">Research Question:</h4>
                              <p class="text-gray-600 italic">{project.research_question}</p>
                            </div>
                          )}
                          
                          {project.project_summary && (
                            <div class="mb-4">
                              <h4 class="font-semibold text-gray-700 mb-2">Summary:</h4>
                              <p class="text-gray-700">{project.project_summary}</p>
                            </div>
                          )}
                        </div>
                      </div>
                      
                      {/* Final Project Section */}
                      <div class="bg-gray-50 rounded-lg p-6 mt-6">
                        <h4 class="font-semibold text-gray-800 mb-4">Final Project:</h4>
                        
                        <div class="flex flex-col md:flex-row gap-6">
                          {/* Poster thumbnail */}
                          {project.poster_thumb && (
                            <div class="md:w-48 flex-shrink-0">
                              {project.poster_pdf ? (
                                <a href={`${directusUrl}assets/${project.poster_pdf}`} target="_blank" class="block">
                                  <img 
                                    src={`${directusUrl}assets/${project.poster_thumb}?width=200&quality=90`}
                                    alt={`${project.title} poster`}
                                    class="w-full h-auto rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200"
                                  />
                                </a>
                              ) : (
                                <img 
                                  src={`${directusUrl}assets/${project.poster_thumb}?width=200&quality=90`}
                                  alt={`${project.title} poster`}
                                  class="w-full h-auto rounded-lg shadow-md"
                                />
                              )}
                            </div>
                          )}
                          
                          {/* Project details */}
                          <div class="flex-grow">
                            <div class="mb-2">
                              <h5 class="font-semibold text-gray-800">{project.name_intern}</h5>
                              <p class="text-sm text-gray-600">{project.affiliation_intern}</p>
                            </div>
                            
                            <div class="text-gray-700 italic">
                              "{project.title}"
                            </div>
                            
                            {project.poster_pdf && (
                              <div class="mt-4">
                                <a 
                                  href={`${directusUrl}assets/${project.poster_pdf}`}
                                  target="_blank"
                                  class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition"
                                >
                                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                  </svg>
                                  View Poster (PDF)
                                </a>
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
              
              {/* Group photo for the year */}
              <div class="mt-12 text-center">
                {/* Group photo from database if available */}
                {yearDetails && yearDetails.interns_group_image && (
                  <figure>
                    <img 
                      src={`${directusUrl}assets/${yearDetails.interns_group_image}?width=800&quality=90`}
                      alt={yearDetails.interns_group_caption || `${year} Potter Interns and mentors`}
                      class="w-full max-w-3xl h-auto rounded-lg shadow-lg mx-auto"
                    />
                    {yearDetails.interns_group_caption && (
                      <figcaption class="text-sm text-gray-600 mt-2 italic">
                        {yearDetails.interns_group_caption}
                      </figcaption>
                    )}
                  </figure>
                )}
                        
              </div>
            </div>
          );
        })}
      </div>
    ) : (
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 4rem; height: 4rem;" class="text-gray-400 mx-auto mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <h3 class="text-2xl font-medium text-gray-700 mb-4">No Projects Available</h3>
        <p class="text-gray-500 mb-8">
          Project information will be posted here after each program year concludes.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/intern" 
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition"
          >
            Learn About the Program
          </a>
          <a 
            href="/intern/faq" 
            class="inline-flex items-center px-6 py-3 border-2 border-blue-600 text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition"
          >
            View FAQs
          </a>
        </div>
      </div>
    )}

    <!-- Call to Action -->
    <div class="bg-gradient-to-r from-green-50 to-blue-50 border border-green-200 rounded-lg p-8 mt-16">
      <div class="text-center">
        <h3 class="text-2xl font-bold text-blue-800 mb-4">
          Interested in Joining Future Projects?
        </h3>
        <p class="text-gray-700 mb-6">
          The Paul Edwin Potter Internship Program continues to offer exciting research opportunities each summer. 
          Learn more about upcoming programs and application processes.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/intern/2025" 
            class="inline-flex items-center px-6 py-3 btn btn-primary btn-md"
          >
            <i class="fas fa-info-circle mr-2" style="font-size: 1.25rem;"></i>
            View Current Program
          </a>
          <a 
            href="mailto:kgspotterinternship@uky.edu" 
            class="inline-flex items-center px-6 py-3 btn btn-primary btn-md"
          >
            <i class="fas fa-envelope mr-2" style="font-size: 1.25rem;"></i>
            Contact Us
          </a>
        </div>
      </div>
    </div>
    </div>
  </div>
</BaseLayout>

<style>
  .year-section {
    margin-bottom: 4rem;
  }
  
  .year-section:last-child {
    margin-bottom: 0;
  }
  
  /* Ensure proper spacing for project cards */
  .year-section .grid {
    gap: 2rem;
  }
  
  /* Hover effects for poster images */
  .year-section img:hover {
    transform: scale(1.02);
    transition: transform 0.2s ease;
  }
</style>