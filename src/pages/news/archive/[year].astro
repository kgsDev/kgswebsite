---
// src/pages/news/archive/[year].astro
export const prerender = true; // Enable SSR for this page
import NewsLayout from '../../../layouts/NewsLayout.astro';
import NewsCard from '../../../components/news/NewsCard.astro';
import { fetchNewsByMonth, fetchNewsYears } from '../../../lib/api_news';

// Generate static paths for all years
export async function getStaticPaths() {
  const years = await fetchNewsYears();
  console.log('Available years for archive:', years);

  return years.map((year) => ({
    params: {
      year: String(year),
    },
  }));
}

// Get year from params (not URL)
const { year } = Astro.params;

// Try parsing the year - if it's not valid, use current year
let yearNum;
try {
  yearNum = parseInt(year);
  console.log("Parsed year:", yearNum);
  if (isNaN(yearNum) || yearNum < 1900 || yearNum > 2100) {
    console.log("Invalid year, using current year");
    yearNum = new Date().getFullYear();
  }
} catch (error) {
  console.log("Error parsing year:", error);
  yearNum = new Date().getFullYear();
}

// Fetch news articles grouped by month for this year
const { articlesByMonth } = await fetchNewsByMonth(yearNum);

// Get list of available years for archive navigation
const years = await fetchNewsYears();

// Meta information
const title = `${year} News Archive`;
const description = `Browse news and updates from ${year} at the Kentucky Geological Survey.`;

// Helper function to get icon for category
const getCategoryIcon = (category) => {
  switch(category) {
    case 'press':
      return `<svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>`;
    case 'research':
      return `<svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>`;
    case 'event':
      return `<svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="mr-1 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>`;
  }
};

// Format date for display
const formatDate = (dateString) => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<NewsLayout title={title} description={description}>
  <!-- Head Metadata -->
  <Fragment slot="head-meta">
    <title>{title} | Kentucky Geological Survey</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </Fragment>
  <!-- Custom Sidebar -->
  <Fragment slot="sidebar">
    <!-- Years navigation -->
    <div class="bg-white p-4 rounded-lg shadow mb-6">
      <h2 class="text-xl font-bold mb-4 text-blue-800">Archive Years</h2>
      <div class="space-y-1">
        {years.map(archiveYear => (
          <div>
            <a 
              href={`/news/archive/${archiveYear}`} 
              class={`block px-3 py-2 rounded-md ${archiveYear.toString() === year ? 'bg-blue-50 text-blue-700 font-medium' : 'text-gray-700 hover:bg-gray-50'}`}
            >
              {archiveYear}
            </a>
          </div>
        ))}
      </div>
    </div>

    <!-- Categories navigation -->
    <div class="bg-white p-4 rounded-lg shadow mb-6">
      <h2 class="text-xl font-bold mb-4 text-blue-800">News Categories</h2>
      <ul class="space-y-2">
        <li><a href="/news" class="baselink">All News</a></li>
        <li><a href="/news/press-releases"  class="baselink">Press Releases</a></li>
        <li><a href="/news/research"  class="baselink">Research Updates</a></li>
        <li><a href="/news/events"  class="baselink">Events</a></li>
      </ul>
    </div>
  </Fragment>
  
  <!-- Page Content -->
  <div data-pagefind-meta="category:News">
    <h1 class="text-3xl font-bold text-blue-900 mb-2">{year} News Archive</h1>
    <p class="text-gray-600 mb-8">Browse news and updates from {year} at the Kentucky Geological Survey.</p>
    
    <!-- Year Navigation -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-2 justify-center">
        {years.map((archiveYear) => (
          <a 
            href={`/news/archive/${archiveYear}`}
            class={`px-4 py-2 rounded-md transition ${
              archiveYear.toString() === year 
                ? 'bg-blue-600 text-white font-semibold' 
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
            }`}
          >
            {archiveYear}
          </a>
        ))}
      </div>
    </div>
    
    {Object.keys(articlesByMonth).length > 0 ? (
      <div class="space-y-12">
        {Object.entries(articlesByMonth).map(([month, articles]) => (
          <section id={month.toLowerCase()}>
            <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-blue-100 text-blue-800">{month}</h2>
            <div class="space-y-6">
              {articles.map(article => (
                <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition p-5">
                  <div class="mb-3 flex items-center gap-2">
                    <div class="text-gray-600 text-sm flex items-center">
                      <Fragment set:html={getCategoryIcon(article.category)} />
                      <time datetime={article.publication_date}>{formatDate(article.publication_date)}</time>
                    </div>
                    
                    {article.category && (
                      <span class={`text-xs px-2 py-1 rounded-full ${
                        article.category === 'press' ? 'bg-blue-100 text-blue-800' : 
                        article.category === 'research' ? 'bg-green-100 text-green-800' : 
                        article.category === 'event' ? 'bg-purple-100 text-purple-800' : 
                        'bg-gray-100 text-gray-800'
                      }`}>
                        {article.category === 'press' ? 'Press Release' : 
                         article.category === 'research' ? 'Research' : 
                         article.category === 'event' ? 'Event' : 
                         'News'}
                      </span>
                    )}
                  </div>
                  
                  <h3 class="text-xl font-bold text-blue-900 mb-2">
                    <a href={`/news/${article.slug}`} class="hover:text-blue-700">
                      {article.title}
                    </a>
                  </h3>
                  
                  {article.excerpt && (
                    <p class="text-gray-600 mb-4 line-clamp-2">
                      {article.excerpt}
                    </p>
                  )}
                  
                  <a href={`/news/${article.slug}`} class="inline-flex items-center text-gray-700 hover:text-blue-700 hover:underline font-medium transition duration-200" aria-label={`Read full article: ${article.title}`}>
                    Read Article
                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.2rem; height: 1rem;margin-left:3px;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>
                </div>
              ))}
            </div>
          </section>
        ))}
      </div>
    ) : (
      <div class="bg-white p-8 rounded-lg shadow-md text-center">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 4rem; height: 4rem;" class="mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h2 class="text-xl font-semibold text-gray-700 mb-2">No News Articles for {year}</h2>
        <p class="text-gray-600">
          There are no news articles published in {year}. 
          <a href="/news" class="text-blue-600 hover:underline">View latest news</a> instead.
        </p>
      </div>
    )}
    
    <!-- Month anchors - quick navigation -->
    {Object.keys(articlesByMonth).length > 3 && (
      <div class="my-8 bg-gray-50 p-4 rounded-lg shadow-sm">
        <h3 class="font-medium text-gray-700 mb-3">Jump to Month:</h3>
        <div class="flex flex-wrap gap-2">
          {Object.keys(articlesByMonth).map(month => (
            <a 
              href={`#${month.toLowerCase()}`} 
              class="px-3 py-1 rounded-md bg-white text-blue-600 hover:bg-blue-50 border border-gray-200"
            >
              {month}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</NewsLayout>

<style>
  /* Truncate text using line clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>