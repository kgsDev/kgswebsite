---
// src/pages/news/archive/index.astro
export const prerender = false; // Enable SSR for this page
import NewsLayout from '../../../layouts/NewsLayout.astro';
import { fetchNewsYears, fetchNewsByMonth } from '../../../lib/api_news';

// Get available years for archives
const years = await fetchNewsYears();

// Get current year (either the latest year with articles or the current calendar year)
const currentYear = years.length > 0 ? Math.max(...years) : new Date().getFullYear();

// Fetch a sample of articles from each year (limit to most recent 5 years)
const recentYears = years.sort((a, b) => b - a).slice(0, 5);
const yearSamples = {};

for (const year of recentYears) {
  const { articlesByMonth } = await fetchNewsByMonth(year);
  
  // Get a flat list of articles from all months, limit to 3 per year
  const articles = [];
  Object.values(articlesByMonth).forEach(monthArticles => {
    articles.push(...monthArticles);
  });
  
  yearSamples[year] = articles.slice(0, 3);
}

// Format date for display
const formatDate = (dateString) => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Get category label
const getCategoryLabel = (category) => {
  switch(category) {
    case 'press': return 'Press Release';
    case 'research': return 'Research';
    case 'event': return 'Event';
    default: return 'News';
  }
};

// Get category color class
const getCategoryColor = (category) => {
  switch(category) {
    case 'press': return 'bg-blue-100 text-blue-800';
    case 'research': return 'bg-green-100 text-green-800';
    case 'event': return 'bg-purple-100 text-purple-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};

// Page metadata
const title = "News Archives";
const description = "Browse the Kentucky Geological Survey news archives by year.";
---

<NewsLayout title={title} description={description}>
  <!-- Head Metadata -->
  <Fragment slot="head-meta">
    <title>{title} | Kentucky Geological Survey</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </Fragment>

  <!-- Custom Sidebar -->
  <Fragment slot="sidebar">
    <!-- Years navigation -->
    <div class="bg-white p-4 rounded-lg shadow mb-6">
      <h2 class="text-xl font-bold mb-4 text-blue-800">Archive Years</h2>
      <div class="space-y-1">
        {years.map(year => (
          <div>
            <a 
              href={`/news/archive/${year}`} 
              class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50"
            >
              {year}
            </a>
          </div>
        ))}
      </div>
    </div>

    <!-- Categories navigation -->
    <div class="bg-white p-4 rounded-lg shadow">
      <h2 class="text-xl font-bold mb-4 text-blue-800">Categories</h2>
      <ul class="space-y-2">
        <li><a href="/news" class="text-blue-600 hover:underline">All News</a></li>
        <li><a href="/news/press-releases" class="text-blue-600 hover:underline">Press Releases</a></li>
        <li><a href="/news/research" class="text-blue-600 hover:underline">Research Updates</a></li>
        <li><a href="/news/events" class="text-blue-600 hover:underline">Events</a></li>
      </ul>
    </div>
  </Fragment>
  
  <!-- Page Content -->
  <div>
    <h1 class="text-3xl font-bold text-blue-900 mb-2">News Archives</h1>
    <p class="text-gray-600 mb-8">Browse our news archives by year to explore past announcements, research updates, and events.</p>
    
    <!-- Years Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mb-12">
      {years.map(year => (
        <a 
          href={`/news/archive/${year}`} 
          class="block text-center p-4 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow hover:border-blue-300"
        >
          <span class="text-xl font-bold text-blue-800 block mb-1">{year}</span>
          <span class="text-sm text-gray-600">View Articles</span>
        </a>
      ))}
    </div>
    
    <!-- Recent Articles by Year -->
    {Object.keys(yearSamples).length > 0 && (
      <div class="mt-8">
        <h2 class="text-2xl font-bold text-blue-900 mb-6">Recent Articles by Year</h2>
        
        <div class="space-y-12">
          {Object.entries(yearSamples).map(([year, articles]) => (
            <div>
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-blue-800">{year}</h3>
                <a href={`/news/archive/${year}`} class="text-blue-600 hover:underline flex items-center">
                  View All {year} Articles
                  <svg xmlns="http://www.w3.org/2000/svg" style="width: 1rem; height: 1rem;" class="ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {articles.map(article => (
                  <a href={`/news/${article.slug}`} class="block bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow p-4 h-full flex flex-col">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="text-sm text-gray-600">{formatDate(article.published_date)}</span>
                      
                      {article.category && (
                        <span class={`text-xs px-2 py-0.5 rounded-full ${getCategoryColor(article.category)}`}>
                          {getCategoryLabel(article.category)}
                        </span>
                      )}
                    </div>
                    
                    <h4 class="text-lg font-semibold text-blue-900 mb-2 line-clamp-2">
                      {article.title}
                    </h4>
                    
                    {article.excerpt && (
                      <p class="text-sm text-gray-600 mb-4 line-clamp-2 flex-grow">
                        {article.excerpt}
                      </p>
                    )}
                    
                    <div class="mt-auto pt-2 text-blue-600 text-sm font-medium" aria-label={`Read more about ${article.title}`}>
                      Read more
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    <!-- Archive Statistics (if needed) -->
    {years.length > 0 && (
      <div class="mt-16 bg-blue-50 border border-blue-100 rounded-lg p-6">
        <h2 class="text-xl font-bold text-blue-900 mb-4">Archive Statistics</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
          <div class="bg-white p-4 rounded-lg shadow-sm">
            <div class="text-3xl font-bold text-blue-800 mb-1">{years.length}</div>
            <div class="text-gray-600">Years of Archives</div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow-sm">
            <div class="text-3xl font-bold text-blue-800 mb-1">{years[0]}</div>
            <div class="text-gray-600">Earliest Year</div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow-sm">
            <div class="text-3xl font-bold text-blue-800 mb-1">{currentYear}</div>
            <div class="text-gray-600">Most Recent Year</div>
          </div>
        </div>
      </div>
    )}
  </div>
</NewsLayout>

<style>
  /* Truncate text using line clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>